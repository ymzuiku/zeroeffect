{
  "name": "no-no-no",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun example/document.html",
    "build-logo": "bun scripts/build-logo.ts project-chrome-tabs/public/logo.png",
    "bundle": "bun build example/document.html --outdir=dist",
    "pre-init": "bunx simple-git-hooks",
    "tdd": "bun test --bail",
    "lint": "bunx biome check --write && tsc --noEmit"
