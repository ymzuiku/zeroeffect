  "simple-git-hooks": {
    "pre-commit": "bun lint && bun tdd"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "fake-indexeddb": "^6.2.5",
    "@biomejs/biome": "2.3.7",
    "@happy-dom/global-registrator": "^20.0.10"
  }
}